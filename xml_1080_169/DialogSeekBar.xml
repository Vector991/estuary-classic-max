<?xml version="1.0" encoding="UTF-8"?>
<window>
	<visible>Player.Seeking | Player.DisplayAfterSeek | [Player.Paused + !Player.Caching] | Player.Forwarding | Player.Rewinding</visible>
	<visible>!Window.IsActive(videoosd) + Window.IsActive(fullscreenvideo)</visible>
	<animation effect="fade" start="0" end="100" time="300">WindowOpen</animation>
	<animation effect="fade" start="100" end="0" time="300">WindowClose</animation>
	<depth>DepthOSD</depth>

	<controls>
		<control type="group">
			<centerleft>50%</centerleft>
			<width>1920</width>
			
			<!-- Seek action label -->
			<control type="label">
				<left>0</left>
				<top>140</top>
				<width>100%</width>
				<height>80</height>
				<align>center</align>
				<aligny>center</aligny>
				<label>$VAR[SeekLabel]</label>
				<font>Font52_Title</font>
				<shadowcolor>text_shadow</shadowcolor>
			</control>						

			<control type="group">
				<top>920</top>
				
				<control type="image">
					<left>0</left>
					<top>0</top>
					<width>100%</width>
					<height>160</height>
					<texture colordiffuse="cccccccc">colors/white.png</texture>
				</control>					
				
				<!-- Chapter -->
				<control type="label">
					<top>10</top>
					<right>20</right>
					<width>100%</width>
					<height>20</height>
					<align>right</align>
					<aligny>center</aligny>
					<font>font13</font>
					<textcolor>black</textcolor>
					<label>$LOCALIZE[21396]: $INFO[player.chapter]$INFO[player.chaptercount, / ]</label>
					<visible>player.chaptercount + Window.IsVisible(FullScreenVideo)</visible>
				</control>

				<!-- Seek time -->
				<control type="label">
					<left>20</left>
					<top>40</top>
					<width>640</width>
					<height>40</height>
					<font>Font45</font>
					<aligny>center</aligny>
					<textcolor>black</textcolor>
					<label>$VAR[SeekTimeLabelVar]</label>
				</control>
				<control type="progress">
					<animation effect="fade" end="0" time="200">WindowClose</animation>
					<left>20</left>
					<top>100</top>
					<width>1880</width>
					<height>40</height>
					<info>Player.ProgressCache</info>
					<texturebg colordiffuse="black">colors/white50.png</texturebg>
					<midtexture colordiffuse="cccccccc">colors/white50.png</midtexture>
				</control>				

				<!-- Remaining -->
				<control type="label">
					<top>40</top>
					<width>100%</width>
					<height>40</height>
					<align>center</align>
					<aligny>center</aligny>
					<font>Font45</font>
					<textcolor>black</textcolor>
					<label>$LOCALIZE[31134]: $INFO[Player.TimeRemaining]</label>
				</control>
				
				<!-- Ends at -->
				<control type="label">
					<right>20</right>
					<top>40</top>
					<width>100%</width>
					<height>40</height>
					<aligny>center</aligny>
					<align>right</align>
					<font>Font45</font>
					<textcolor>black</textcolor>
					<label>$LOCALIZE[31080]: $INFO[Player.FinishTime]</label>
				</control>				
				
				<!-- Seek bar -->
				<control type="progress">
					<left>20</left>
					<top>100</top>
					<width>1880</width>
					<height>40</height>
					<info>Player.Progress</info>
					<texturebg colordiffuse="black">colors/white50.png</texturebg>
					<midtexture colordiffuse="cccccccc">colors/white50.png</midtexture>
				</control>				
				<control type="slider">
					<left>20</left>
					<top>100</top>
					<width>1880</width>
					<height>40</height>
					<texturesliderbar colordiffuse="00FFFFFF">osd/progress/nub_leftright.png</texturesliderbar>
					<textureslidernib colordiffuse="white">osd/progress/nub_leftright.png</textureslidernib>
					<textureslidernibfocus colordiffuse="white">osd/progress/nub_leftright.png</textureslidernibfocus>
					<info>Player.Progress</info>
					<onup>8010</onup>
					<ondown>650</ondown>
				</control> 				
			</control>
		</control>
	</controls>
</window>
