<?xml version="1.0" encoding="utf-8"?>
<window>
	<defaultcontrol></defaultcontrol>
	<backgroundcolor>background</backgroundcolor>
	<controls>
		<control type="visualisation">
			<include>FullScreenDimensions</include>
			<visible>Player.HasAudio</visible>
		</control>
		
		<control type="image">
			<left>0</left>
			<top>0</top>
			<width>100%</width>
			<height>100%</height>
			<aspectratio>scale</aspectratio>
			<fadetime>400</fadetime>
			<animation effect="fade" start="0" end="100" time="400">WindowOpen</animation>
			<animation effect="fade" start="100" end="0" time="300">WindowClose</animation>
			<texture background="true" colordiffuse="EEFFFFFF">$INFO[Player.Art(fanart)]</texture>
			<visible>String.IsEmpty(Visualisation.Name)</visible>
		</control>
		<control type="image">
			<left>0</left>
			<top>0</top>
			<width>100%</width>
			<height>100%</height>
			<aspectratio>scale</aspectratio>
			<fadetime>400</fadetime>
			<animation effect="fade" start="0" end="100" time="400">WindowOpen</animation>
			<animation effect="fade" start="100" end="0" time="300">WindowClose</animation>
			<texture background="true" colordiffuse="44FFFFFF">$INFO[Player.Art(fanart)]</texture>
			<visible>!String.IsEmpty(Visualisation.Name)</visible>
		</control>		
		
		<control type="image">
			<texture fallback="special://skin/extras/backgrounds/SKINDEFAULT.jpg">$VAR[GlobalFanartVar]</texture>
			<width>100%</width>
			<height>100%</height>
			<aspectratio align="center">scale</aspectratio>
			<animation effect="fade" start="100" end="10" time="0" condition="!String.IsEmpty(Player.Art(fanart)) | !String.IsEmpty(Visualisation.Name)">Conditional</animation>
		</control>
		
		<control type="group">
			<centerleft>50%</centerleft>
			<width>1920</width>
			
			<control type="group">
				<include>OpenClose_Left</include>
				<include>Visible_Left</include>			
				<visible>Player.ShowInfo | Window.IsActive(musicosd)</visible>

				<control type="image">
					<left>20</left>
					<bottom>20</bottom>
					<width>470</width>
					<height>418</height>	
					<texture>frame/cd.png</texture>
				</control>
				
				<control type="image">
					<left>77</left>
					<bottom>30</bottom>
					<width>400</width>
					<height>400</height>
					<texture border="2">$INFO[MusicPlayer.Cover]</texture>
				</control>
				
				<control type="label">
					<animation effect="rotate" end="90,0" center="60,1040" condition="true">conditional</animation>
					<left>50</left>
					<bottom>40</bottom>
					<width>400</width>
					<height>40</height>
					<label>$ESCINFO[MusicPlayer.Artist]</label>
					<font>font13</font>
					<fadetime>400</fadetime>
					<align>center</align>
					<shadowcolor>black</shadowcolor>
				</control>			
			</control>
			
			<control type="group">
				<visible>[Player.ShowInfo | Window.IsActive(musicosd)] + !Window.IsActive(playerprocessinfo)</visible>
				<top>120</top>
				
				<control type="label">
					<right>20</right>
					<top>0</top>
					<width>900</width>
					<height>60</height>
					<aligny>center</aligny>
					<align>right</align>
					<label>$INFO[MusicPlayer.Album]$INFO[MusicPlayer.Year, [,] ]</label>
					<font>font30_title</font>
					<shadowcolor>black</shadowcolor>
				</control>

				<control type="textbox">
					<left>900</left>
					<top>80</top>
					<width>1000</width>
					<align>right</align>
					<height>800</height>
					<label>[B][UPPERCASE]$LOCALIZE[31024][/UPPERCASE][/B][CR]$INFO[MusicPlayer.Offset(1).Title][COLOR grey]$INFO[MusicPlayer.Offset(1).Artist, - ,][/COLOR][COLOR button_focus]$INFO[MusicPlayer.Offset(1).Duration, - ,][/COLOR][CR]$INFO[MusicPlayer.Offset(2).Title][COLOR grey]$INFO[MusicPlayer.Offset(2).Artist, - ,][/COLOR][COLOR button_focus]$INFO[MusicPlayer.Offset(2).Duration, - ,][/COLOR][CR]$INFO[MusicPlayer.Offset(3).Title][COLOR grey]$INFO[MusicPlayer.Offset(3).Artist, - ,][/COLOR][COLOR button_focus]$INFO[MusicPlayer.Offset(3).Duration, - ,][/COLOR]</label>
					<textcolor>button_focus</textcolor>
					<font>font12</font>
					<visible>!String.IsEmpty(MusicPlayer.Offset(1).Title)</visible>
				</control>				
			</control>				
			
			<control type="group">
				<visible>[Player.ShowInfo | Window.IsActive(musicosd)] + !Window.IsActive(playerprocessinfo)</visible>
				<include>OpenClose_Right</include>
				<include>Visible_Right</include>
				
 				<control type="group">
					<visible>!Window.IsActive(musicosd)</visible>			
					
					<control type="label">
						<left>510</left>
						<top>920</top>
						<width>1390</width>
						<height>100</height>
						<align>center</align>
						<aligny>center</aligny>
						<label>$INFO[Player.Time]$INFO[Player.Duration, / ]</label>
						<font>Font45</font>
						<textcolor>white</textcolor>
					</control>				
					<control type="label">
						<left>510</left>
						<top>920</top>
						<width>1390</width>
						<height>100</height>
						<align>right</align>
						<aligny>center</aligny>
						<label>$VAR[SeekLabel]</label>
						<font>font45</font>
						<shadowcolor>black</shadowcolor>
						<textcolor>grey</textcolor>
						<animation effect="fade" start="0" end="100" delay="400" time="200">WindowOpen</animation>
						<animation effect="fade" end="0" time="200">WindowClose</animation>
					</control>
					<control type="progress">
						<animation effect="fade" end="0" time="200">WindowClose</animation>
						<left>510</left>
						<top>1020</top>
						<width>1390</width>
						<height>40</height>
						<info>Player.ProgressCache</info>
						<texturebg colordiffuse="grey">colors/white50.png</texturebg>
						<midtexture colordiffuse="eeeeeeee">colors/white50.png</midtexture>
						<animation effect="fade" start="100" end="80" time="0" condition="true">Conditional</animation>
						<visible>!Player.ChannelPreviewActive</visible>
					</control>
					<control type="progress" id="23">
						<animation effect="fade" end="0" time="200">WindowClose</animation>
						<left>510</left>
						<top>1020</top>
						<width>1390</width>
						<height>40</height>
						<info>Player.Progress</info>
						<texturebg colordiffuse="grey">colors/white50.png</texturebg>
						<midtexture colordiffuse="eeeeeeee">colors/white50.png</midtexture>
						<visible>!Player.ChannelPreviewActive | VideoPlayer.HasEpg</visible>
					</control>
				</control>
				
			</control>
		</control>
		
		<control type="group">
			<visible>Player.ShowInfo | Window.IsActive(musicosd)</visible>
			<animation effect="fade" start="0" end="100" time="200">Visible</animation>
			<animation effect="fade" end="0" time="200">Hidden</animation>
			<include content="TopBar">
				<param name="breadcrumbs_label" value="$LOCALIZE[250]" />
				<param name="breadcrumbs_icon" value="icons/settings/music.png" />
			</include>
		</control>
	</controls>
</window>
