			<control type="image">
				<width>640</width>
				<height>522</height>
				<texture colordiffuse="33333333">colors/black.png</texture>
			</control>		
			
			<control type="label">
				<top>20</top>
				<left>20</left>
				<width>600</width>
				<textcolor>button_focus</textcolor>
				<aligny>bottom</aligny>
				<font>font30_title</font>
				<label>$INFO[ListItem.EpgEventTitle]</label>
			</control>
			
			<control type="label">
				<top>65</top>
				<left>20</left>
				<width>600</width>
				<height>40</height>
				<font>font12</font>
				<label>$INFO[ListItem.Genre,[COLOR button_focus]$LOCALIZE[515]:[/COLOR] ]</label>
			</control>			
			
			<control type="textbox">
				<top>120</top>
				<left>20</left>
				<width>600</width>
				<height>340</height>
				<font>font12</font>
				<label>$INFO[ListItem.Plot]</label>
				<autoscroll delay="8000" time="1500" repeat="10000">Skin.HasSetting(AutoScroll)</autoscroll>
			</control>			
			
			<control type="image">
				<left>20</left>
				<top>460</top>
				<width>600</width>
				<height>3</height>
				<texture border="90,3,90,3">lists/separator.png</texture>
			</control>							
			
			<!-- Next -->
			<control type="label">
				<top>470</top>
				<left>20</left>
				<width>480</width>
				<height>40</height>
				<font>font12</font>
				<label>$PARAM[bottom_label1]</label>
				<scroll>true</scroll>
			</control>
			<control type="label">
				<top>470</top>
				<right>20</right>
				<width>600</width>
				<height>40</height>
				<align>right</align>
				<font>font12</font>
				<label>$PARAM[bottom_label2]</label>
			</control>			

			<!-- No information avail... -->
			<control type="textbox">
				<top>470</top>
				<width>600</width>
				<left>20</left>
				<height>50</height>
				<font>font12</font>
				<label>$LOCALIZE[19055]</label>
				<visible>String.IsEmpty(Listitem.Plot) + String.IsEmpty(Listitem.Genre)</visible>
			</control>
			
		</control>
		
	</include>
	
	
	<variable name="PVRChannelLabel">
		<value condition="String.IsEmpty(ListItem.Title)">$INFO[ListItem.Label]</value>
		<value>$INFO[ListItem.Title]</value>
	</variable>
</includes>
