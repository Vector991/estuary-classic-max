<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="View_50_List">
		<!--
		<include content="UpDownArrows">
			<param name="container_id" value="50" />
			<param name="visible" value="!System.HasModalDialog" />
			<param name="up_posy">40</param>
			<param name="down_posy">1040</param>
			<param name="posx">814</param>			
		</include>
		-->
		<control type="group">
			<include>OpenClose_Right</include>
			<left>0</left>
			<top>83</top>			
			<visible>Control.IsVisible(50)</visible>
			<include>Visible_Right</include>
			
			<include content="ListContainer">
				<param name="list_id" value="50" />
				<param name="viewtype_label" value="$LOCALIZE[535]" />
			</include>

			<control type="group">
				<control type="image">
					<left>870</left>
					<width>2</width>
					<height>942</height>
					<texture colordiffuse="88888888">colors/white.png</texture>
				</control>				
			</control>
			
			<!-- Center image (fanart..) -->
			<control type="image">
				<left>874</left>
				<top>-2</top>
				<width>562</width>
				<height>368</height>
				<aspectratio aligny="top">scale</aspectratio>
				<fadetime>300</fadetime>
				<texture background="true" fallback="DefaultNoPreview.png">$VAR[ListInfoBoxImageVar]</texture>
				<bordertexture border="22">dialogs/dialog-bg.png</bordertexture>
				<bordersize>22</bordersize>
				<visible>!ListItem.IsParentFolder</visible>
			</control>
			<control type="image">
				<left>896</left>
				<top>20</top>
				<width>518</width>
				<height>324</height>
				<aspectratio aligny="top">scale</aspectratio>
				<fadetime>300</fadetime>
				<texture>DefaultBackFanart.png</texture>
				<visible>ListItem.IsParentFolder</visible>
			</control>
			
			<!-- Poster -->
			<control type="image">
				<left>1432</left>
				<top>-2</top>
				<width>490</width>
				<height>714</height>
				<fadetime>200</fadetime>
				<aspectratio>scale</aspectratio>
				<texture fallback="DefaultVideo.png" background="true">$VAR[PosterVar]</texture>
				<bordertexture border="22">dialogs/dialog-bg.png</bordertexture>
				<bordersize>22</bordersize>				
				<visible>!ListItem.IsParentFolder</visible>
			</control>
			
			<!-- Plot -->
			<control type="image">
				<left>896</left>
				<top>364></top>
				<width>518</width>
				<height>560</height>
				<texture colordiffuse="55555555">colors/black.png</texture>
			</control>
			
			<control type="textbox">
				<left>916</left>
				<top>384</top>
				<width>478</width>
				<height>520</height>
				<font>font12</font>
				<visible>!ListItem.IsCollection</visible>
				<label>$INFO[ListItem.Tagline,[B],[/B][CR]]$INFO[ListItem.Plot]</label>
				<autoscroll delay="8000" time="2000" repeat="10000">Skin.HasSetting(autoscroll)</autoscroll>
			</control>			
			
			<!-- Media Info, Flags -->
			<control type="group">
				<visible>Skin.HasSetting(show_mediaflags)</visible>

				<control type="grouplist">
					<orientation>vertical</orientation>
					<left>1454</left>
					<top>700</top>
					<width>446</width>
					<height>200</height>
					
					<control type="label">
						<height>40</height>
						<font>Font12</font>
						<label>$INFO[ListItem.Label]</label>
						<visible>ListItem.IsCollection</visible>
					</control>					
					<control type="label">
						<height>40</height>
						<font>Font12</font>
						<label>$INFO[ListItem.Genre]</label>
					</control>
					<control type="label">
						<height>40</height>
						<font>Font12</font>
						<label>$INFO[ListItem.Premiered]</label>
					</control>
					<control type="label">
						<height>40</height>
						<font>Font12</font>
						<label>$INFO[ListItem.Duration] $LOCALIZE[31060]</label>
						<visible>Integer.IsGreater(ListItem.Duration, 0)</visible>
					</control>					
					<control type="label">
						<height>80</height>
						<font>Font14</font>
						<label>$INFO[ListItem.RatingAndVotes]</label>
					</control>					
				</control>
				
				<control type="grouplist">
					<orientation>horizontal</orientation>
					<left>1450</left>
					<top>880</top>
					<width>466</width>
					
					<include content="MediaFlag">
						<param name="texture" value="$VAR[ResolutionFlagVar]" />
					</include>					
					<include content="MediaFlag">
						<param name="texture" value="$INFO[ListItem.VideoCodec,flags/videocodec/,.png]" />
					</include>					
					<include content="MediaFlag">
						<param name="texture" value="$INFO[ListItem.AudioChannels,flags/audiochannel/,.png]" />
					</include>
					<include content="MediaFlag">
						<param name="texture" value="$INFO[ListItem.AudioCodec,flags/audiocodec/,.png]" />
					</include>
				</control>			
			</control>
			
			<!-- Sets -->
			<control type="group">
				<visible>ListItem.IsCollection</visible>

				<control type="group">
					<left>916</left>
					<top>384</top>

					<include content="InfoList">
						<param name="height" value="520" />
						<param name="width" value="478" />
						<param name="sortby" value="year" />
						<param name="sortorder" value="descending" />
						<param name="font" value="font12" />
					</include>
				</control>					
			</control>			
			
		</control>
	</include>
	
	<include name="ListContainer">

		<control type="list" id="$PARAM[list_id]">
			<left>0</left>
			<top>0</top>
			<width>810</width>
			<height>945</height>
			<scrolltime tween="cubic" easing="out">500</scrolltime>
			<orientation>vertical</orientation>
			<pagecontrol>$PARAM[list_id]600</pagecontrol>
			<onleft>9000</onleft>
			<onright>$PARAM[list_id]600</onright>
			<onup>$PARAM[list_id]</onup>
			<ondown>$PARAM[list_id]</ondown>
			<viewtype label="$PARAM[viewtype_label]">list</viewtype>
			<visible>Container.Content(movies) | Container.Content(sets) | Container.Content(tvshows) | Container.Content(seasons) | Container.Content(episodes)</visible>
			
			<itemlayout height="63" width="810">
				<control type="image">
					<left>0</left>
					<top>0</top>
					<width>800</width>
					<height>63</height>
					<texture border="90,3,90,3">lists/separator.png</texture>
				</control>
				<control type="label">
					<left>70</left>
					<top>0</top>
					<height>63</height>
					<width>650</width>
					<aligny>center</aligny>
					<label>$INFO[ListItem.Label]$VAR[PlayCountText]</label>
					<font>font12</font>
					<shadowcolor>text_shadow</shadowcolor>
				</control>
				<control type="label">
					<left>0</left>
					<top>0</top>
					<height>63</height>
					<width>750</width>
					<align>right</align>
					<aligny>center</aligny>
					<font>font12</font>
					<label>$VAR[ListLabel2Var]</label>
					<textcolor>grey</textcolor>
					<shadowcolor>text_shadow</shadowcolor>
				</control>
				<control type="group">
					<left>760</left>
					<top>9</top>
					<include content="UserRatingCircle">
						<param name="animation" value="False" />
					</include>
				</control>					
				<control type="image">
					<left>21</left>
					<top>20</top>
					<width>32</width>
					<height>32</height>
					<texture colordiffuse="grey">$VAR[ListWatchedIconVar]</texture>
				</control>
			</itemlayout>
			
			<focusedlayout height="63">
				<control type="image">
					<left>0</left>
					<top>0</top>
					<width>800</width>
					<height>63</height>
					<texture border="90,3,90,3">lists/separator.png</texture>
				</control>
				<control type="image">
					<left>0</left>
					<top>0</top>
					<width>810</width>
					<height>59</height>
					<texture colordiffuse="button_focus">lists/focus.png</texture>
					<visible>Control.HasFocus($PARAM[list_id])</visible>
				</control>
				<control type="label">
					<left>70</left>
					<top>0</top>
					<height>63</height>
					<width>650</width>
					<aligny>center</aligny>
					<scroll>true</scroll>
					<label>$INFO[ListItem.Label]$VAR[PlayCountText]</label>
					<font>font25_title</font>
					<shadowcolor>text_shadow</shadowcolor>
				</control>
				<control type="label">
					<left>0</left>
					<top>0</top>
					<height>63</height>
					<width>750</width>
					<align>right</align>
					<aligny>center</aligny>
					<font>font25_title</font>
					<label>$VAR[ListLabel2Var]</label>
					<animation effect="fade" start="70" end="100" time="300" reversible="false">Focus</animation>
					<shadowcolor>text_shadow</shadowcolor>
				</control>
				<control type="group">
					<left>760</left>
					<top>9</top>
					<include content="UserRatingCircle">
						<param name="animation" value="False" />
					</include>
				</control>				
				<control type="image">
					<left>21</left>
					<top>20</top>
					<width>32</width>
					<height>32</height>
					<texture>$VAR[ListWatchedIconVar]</texture>
					<animation effect="fade" start="30" end="100" time="300" reversible="false">Focus</animation>
				</control>
				<control type="image">
					<left>21</left>
					<top>20</top>
					<width>32</width>
					<height>32</height>
					<texture colordiffuse="button_focus">$VAR[ListWatchedIconVar]</texture>
					<animation effect="fade" start="0" end="100" time="300" reversible="false">Focus</animation>
					<animation effect="fade" time="150">VisibleChange</animation>
					<visible>!Control.HasFocus($PARAM[list_id])</visible>
				</control>
				<control type="label">
					<left>70</left>
					<top>0</top>
					<height>63</height>
					<width>650</width>
					<aligny>center</aligny>
					<scroll>true</scroll>
					<label>$INFO[ListItem.Label]</label>
					<font>font25_title</font>
					<shadowcolor>text_shadow</shadowcolor>
					<textcolor>button_focus</textcolor>
					<visible>!Control.HasFocus($PARAM[list_id])</visible>					
				</control>				
				<control type="label">
					<left>0</left>
					<top>0</top>
					<height>63</height>
					<width>750</width>
					<align>right</align>
					<aligny>center</aligny>
					<font>font25_title</font>
					<label>$VAR[ListLabel2Var]</label>
					<animation effect="fade" start="70" end="100" time="300" reversible="false">Focus</animation>
					<shadowcolor>text_shadow</shadowcolor>
					<textcolor>button_focus</textcolor>
					<visible>!Control.HasFocus($PARAM[list_id])</visible>
				</control>				
			</focusedlayout>
		</control>
		
		<!-- I like fat scrollbars!  Don't ever change -->
		<control type="scrollbar" id="$PARAM[list_id]600">
			<left>820</left>
			<top>0</top>
			<width>36</width>
			<height>936</height>
			<onleft>$PARAM[list_id]</onleft>
			<onright>$PARAM[list_id]</onright>
			<orientation>vertical</orientation>
			<visible>true</visible>
		</control>
	</include>
	
	<!-- for widelist only? -->
</includes>
