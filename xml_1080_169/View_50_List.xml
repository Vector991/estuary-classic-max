		<control type="group">
			<include>OpenClose_Right</include>
			<left>0</left>
			<top>83</top>			
			<visible>Control.IsVisible(50)</visible>
			<include>Visible_Right</include>
			
			<include content="ListContainer">
				<param name="list_id" value="50" />
				<param name="viewtype_label" value="$LOCALIZE[535]" />
			</include>

			<control type="group">
				<control type="image">
					<left>870</left>
					<width>2</width>
					<height>942</height>
					<texture colordiffuse="88888888">colors/white.png</texture>
				</control>				
			</control>
			
			<!-- Center image (fanart..) -->
			<control type="image">
				<left>874</left>
				<top>-2</top>
				<width>562</width>
				<height>368</height>
				<aspectratio aligny="bottom">scale</aspectratio>
				<fadetime>300</fadetime>
				<texture background="true" fallback="DefaultNoPreview.png">$VAR[ListInfoBoxImageVar]</texture>
				<bordertexture border="22">dialogs/dialog-bg.png</bordertexture>
				<bordersize>22</bordersize>
				<visible>!ListItem.IsParentFolder</visible>
			</control>
			<control type="image">
				<top>20</top>
				<left>896</left>
				<width>518</width>
				<height>324</height>
				<texture border="0,0,0,20">overlays/frame2.png</texture>
				<visible>!ListItem.IsParentFolder</visible>
			</control>			
			
			<control type="group">
				<visible>ListItem.IsParentFolder</visible>
				
				<control type="image">
					<left>896</left>
					<top>20</top>
					<width>518</width>
					<height>324</height>
					<aspectratio aligny="top">keep</aspectratio>
					<texture>DefaultFolderBack.png</texture>
				</control>
				<control type="image">
					<right>40</right>
					<bottom>90</bottom>
					<width>230</width>
					<height>620</height>
					<aspectratio aligny="bottom">keep</aspectratio>
					<texture colordiffuse="66ffffff">max/tvremote.png</texture>
					<visible>Container.Content(tvshows) | Container.Content(seasons) | Container.Content(episodes)</visible>
				</control>	
				<control type="image">
					<right>40</right>
					<bottom>90</bottom>
					<width>600</width>
					<height>400</height>
					<aspectratio aligny="bottom">keep</aspectratio>
					<texture colordiffuse="66ffffff">max/moviepopcorn.png</texture>
					<visible>Container.Content(movies) | Container.Content(sets)</visible>
				</control>				
			</control>
			
			<!-- Poster -->
			<control type="image">
				<left>1432</left>
				<top>-2</top>
				<width>490</width>
				<height>714</height>
				<fadetime>200</fadetime>
				<aspectratio>scale</aspectratio>
				<texture background="true">$VAR[PosterVar]</texture>
				<bordertexture border="22">dialogs/dialog-bg.png</bordertexture>
				<bordersize>22</bordersize>				
				<visible>!ListItem.IsParentFolder</visible>
			</control>
			<control type="label">
				<left>1454</left>
				<top>700</top>
				<width>446</width>
				<height>200</height>					
				<height>40</height>
				<font>Font12</font>
				<label>$INFO[ListItem.Genre]</label>
			</control>			
			<control type="image">
				<bottom>75</bottom>
				<left>1452</left>
				<width>446</width>
				<height>150</height>
				<texture fallback="">$INFO[ListItem.Studio,resource://resource.images.studios.coloured/,.png]</texture>
				<aspectratio align="center" aligny="bottom">keep</aspectratio>						
				<visible>!String.IsEmpty(ListItem.Studio) + System.HasAddon(resource.images.studios.coloured)</visible>
			</control>			
			
			<!-- Plot -->
			<control type="group">
				<visible>!ListItem.IsParentFolder</visible>			
				
				<control type="image">
					<left>896</left>
					<top>364></top>
					<width>518</width>
					<height>560</height>
					<texture border="4" colordiffuse="eeffffff">overlays/frame1.png</texture>
				</control>
				
				<control type="textbox">
					<left>916</left>
					<top>384</top>
					<width>478</width>
					<height>400</height>
					<font>font12</font>
					<visible>!ListItem.IsCollection</visible>
					<label>$INFO[ListItem.Tagline,[B],[/B][CR]]$INFO[ListItem.Plot]</label>
					<autoscroll delay="8000" time="2000" repeat="10000">Skin.HasSetting(autoscroll)</autoscroll>
				</control>			
			</control>
			
			<!-- Additional video info -->
			<control type="group">
				<visible>!ListItem.IsParentFolder</visible>
				<left>896</left>
				<top>804</top>
				
				<control type="image">
					<left>20</left>
					<width>478</width>
					<height>1</height>
					<texture colordiffuse="ee888888">colors/white.png</texture>
				</control>
				
				<control type="group">
					<visible>Container.Content(movies) | Container.Content(episodes)</visible>
					<top>10</top>
					<width>518</width>
					
					<control type="label">
						<left>20</left>
						<width>230</width>
						<height>40</height>
						<font>Font12</font>
						<label>$INFO[ListItem.Duration] $LOCALIZE[31060]</label>
						<visible>Integer.IsGreater(ListItem.Duration, 0)</visible>
					</control>				
					<control type="label">
						<right>20</right>
						<width>230</width>
						<height>40</height>
						<font>Font12</font>
						<align>right</align>
						<label>$INFO[ListItem.Premiered]</label>
						<visible>Container.Content(episodes)</visible>
					</control>
					<control type="label">
						<right>20</right>
						<width>230</width>
						<height>40</height>
						<font>Font12</font>
						<align>right</align>
						<label>$INFO[ListItem.RatingAndVotes]</label>
						<visible>Container.Content(movies)</visible>
					</control>					
				</control>
					
				<control type="group">
					<visible>Container.Content(tvshows) | Container.Content(seasons)</visible>
					<top>10</top>
					<width>518</width>
					
					<control type="label">
						<left>20</left>
						<width>230</width>
						<height>40</height>
						<font>Font12</font>
						<label>$INFO[ListItem.Premiered]</label>
					</control>				
					<control type="label">
						<right>20</right>
						<width>230</width>
						<height>40</height>
						<font>Font12</font>
						<align>right</align>
						<label>$INFO[ListItem.Property(TotalSeasons)] $LOCALIZE[36905]</label>
						<visible>Container.Content(tvshows)</visible>
					</control>
					<control type="label">
						<right>20</right>
						<width>230</width>
						<height>40</height>
						<font>Font12</font>
						<align>right</align>
						<label>$INFO[ListItem.Property(WatchedEpisodes)] / $INFO[ListItem.Property(TotalEpisodes)] $LOCALIZE[20453]</label>
						<visible>Container.Content(seasons)</visible>
					</control>					
					<control type="label">
						<left>20</left>
						<top>40</top>
						<width>230</width>
						<height>40</height>
						<font>Font12</font>
						<label>$INFO[ListItem.RatingAndVotes]</label>
					</control>					
				</control>
				
				<control type="grouplist">
					<visible>Skin.HasSetting(show_mediaflags)</visible>
					<orientation>horizontal</orientation>
					<left>20</left>
					<top>60</top>
					<width>478</width>
					<itemgap>5</itemgap>
					
					<include content="MediaFlag">
						<param name="texture" value="$VAR[ResolutionFlagVar]" />
					</include>					
					<include content="MediaFlag">
						<param name="texture" value="$INFO[ListItem.VideoCodec,flags/videocodec/,.png]" />
					</include>					
					<include content="MediaFlag">
						<param name="texture" value="$INFO[ListItem.AudioChannels,flags/audiochannel/,.png]" />
					</include>
					<include content="MediaFlag">
						<param name="texture" value="$INFO[ListItem.AudioCodec,flags/audiocodec/,.png]" />
					</include>
				</control>				
			</control>
			
			<!-- Sets -->
			<control type="group">
				<visible>ListItem.IsCollection</visible>

				<control type="group">
					<left>916</left>
					<top>384</top>

					<include content="InfoList">
						<param name="height" value="520" />
						<param name="width" value="478" />
						<param name="sortby" value="year" />
						<param name="sortorder" value="descending" />
						<param name="font" value="font12" />
					</include>
				</control>					
			</control>			
			
		</control>
	</include>
	
	<include name="ListContainer">

		<control type="list" id="$PARAM[list_id]">
			<left>0</left>
			<top>0</top>
			<width>810</width>
			<height>945</height>
			<scrolltime tween="cubic" easing="out">500</scrolltime>
			<orientation>vertical</orientation>
			<pagecontrol>$PARAM[list_id]600</pagecontrol>
			<onleft>9000</onleft>
			<onright>$PARAM[list_id]600</onright>
			<onup>$PARAM[list_id]</onup>
			<ondown>$PARAM[list_id]</ondown>
			<viewtype label="$PARAM[viewtype_label]">list</viewtype>
			<visible>Container.Content(movies) | Container.Content(sets) | Container.Content(tvshows) | Container.Content(seasons) | Container.Content(episodes)</visible>
			
			<itemlayout height="63" width="810">
				<control type="image">
					<left>20</left>
					<top>63</top>
					<width>780</width>
					<height>1</height>
					<texture colordiffuse="44888888">colors/white.png</texture>
				</control>
				<control type="label">
					<left>70</left>
					<top>0</top>
					<height>63</height>
					<width>650</width>
					<aligny>center</aligny>
					<label>$INFO[ListItem.Label]$VAR[PlayCountText]</label>
					<font>font13</font>
					<shadowcolor>text_shadow</shadowcolor>
				</control>
				<control type="label">
					<left>0</left>
					<top>0</top>
					<height>63</height>
					<width>750</width>
					<align>right</align>
					<aligny>center</aligny>
					<font>font13</font>
					<label>$VAR[ListLabel2Var]</label>
					<textcolor>grey</textcolor>
					<shadowcolor>text_shadow</shadowcolor>
				</control>
				<control type="group">
					<left>760</left>
					<top>9</top>
					<include content="UserRatingCircle">
						<param name="animation" value="False" />
					</include>
				</control>					
				<control type="image">
					<left>0</left>
					<top>0</top>
					<width>70</width>
					<height>63</height>
					<aspectratio align="center" aligny="center">center</aspectratio>
					<texture colordiffuse="grey">$VAR[ListWatchedIconVar]</texture>
				</control>
			</itemlayout>
			
			<focusedlayout height="63">
				<control type="image">
					<left>20</left>
					<top>63</top>
					<width>780</width>
					<height>1</height>
					<texture colordiffuse="44888888">colors/white.png</texture>
				</control>
				<control type="image">
					<left>10</left>
					<top>0</top>
					<width>800</width>
					<height>60</height>
					<texture colordiffuse="button_focus">lists/focus.png</texture>
					<visible>Control.HasFocus($PARAM[list_id])</visible>
				</control>
				<control type="label">
					<left>70</left>
					<top>0</top>
					<height>63</height>
					<width>650</width>
					<aligny>center</aligny>
					<scroll>true</scroll>
					<label>$INFO[ListItem.Label]$VAR[PlayCountText]</label>
					<font>font13</font>
					<shadowcolor>text_shadow</shadowcolor>
				</control>
				<control type="label">
					<left>0</left>
					<top>0</top>
					<height>63</height>
					<width>750</width>
					<align>right</align>
					<aligny>center</aligny>
					<font>font13</font>
					<label>$VAR[ListLabel2Var]</label>
					<animation effect="fade" start="70" end="100" time="300" reversible="false">Focus</animation>
					<shadowcolor>text_shadow</shadowcolor>
				</control>
				<control type="group">
					<left>760</left>
					<top>9</top>
					<include content="UserRatingCircle">
						<param name="animation" value="False" />
					</include>
				</control>				
				<control type="image">
					<left>0</left>
					<top>0</top>
					<width>70</width>
					<height>63</height>
					<aspectratio align="center" aligny="center">center</aspectratio>
					<texture colordiffuse="white">$VAR[ListWatchedIconVar]</texture>
				</control>
				<control type="image">
					<left>0</left>
					<top>0</top>
					<width>70</width>
					<height>63</height>
					<aspectratio align="center" aligny="center">center</aspectratio>
					<texture colordiffuse="button_focus">$VAR[ListWatchedIconVar]</texture>
					<visible>!Control.HasFocus($PARAM[list_id])</visible>
				</control>
				<control type="label">
					<left>70</left>
					<top>0</top>
					<height>63</height>
					<width>650</width>
					<aligny>center</aligny>
					<scroll>true</scroll>
					<label>$INFO[ListItem.Label]</label>
					<font>font13</font>
					<shadowcolor>text_shadow</shadowcolor>
					<textcolor>button_focus</textcolor>
					<visible>!Control.HasFocus($PARAM[list_id])</visible>					
				</control>				
				<control type="label">
					<left>0</left>
					<top>0</top>
					<height>63</height>
					<width>750</width>
					<align>right</align>
					<aligny>center</aligny>
					<font>font13</font>
					<label>$VAR[ListLabel2Var]</label>
					<animation effect="fade" start="70" end="100" time="300" reversible="false">Focus</animation>
					<shadowcolor>text_shadow</shadowcolor>
					<textcolor>button_focus</textcolor>
					<visible>!Control.HasFocus($PARAM[list_id])</visible>
				</control>				
			</focusedlayout>
		</control>
		
		<!-- I like fat scrollbars!  Don't ever change -->
		<control type="scrollbar" id="$PARAM[list_id]600">
			<animation effect="fade" start="100" end="50" time="500" pulse="true" condition="Control.HasFocus($PARAM[list_id]600)">conditional</animation>
			<left>826</left>
			<top>0</top>
			<width>30</width>
			<height>936</height>
			<onleft>$PARAM[list_id]</onleft>
			<onright>noop</onright>
			<orientation>vertical</orientation>
			<texturesliderbackground colordiffuse="eeeeeeee">overlays/overlayfade.png</texturesliderbackground>
			<texturesliderbar colordiffuse="grey">colors/white.png</texturesliderbar>
			<texturesliderbarfocus colordiffuse="button_focus">colors/white.png</texturesliderbarfocus> 
			<textureslidernib>colors/black.png</textureslidernib>
			<textureslidernibfocus>colors/white.png</textureslidernibfocus>	  
			<visible>true</visible>
		</control>
			
	</include>
	
	<!-- for widelist only? -->
</includes>
